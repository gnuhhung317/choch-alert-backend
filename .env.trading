# Trading Bot Configuration
# Copy this to .env and fill in your values

# ========== Exchange Configuration ==========
# Get API keys from: https://testnet.binancefuture.com (testnet) or https://www.binance.com (production)
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET=your_secret_here

# ========== Trading Mode ==========
USE_TESTNET=1  # 1 = testnet (safe for testing), 0 = production (REAL MONEY!)

# ========== Position Sizing ==========
POSITION_SIZE_USDT=100  # Total position size in USDT per signal
MAX_POSITIONS=3         # Maximum concurrent positions
LEVERAGE=1              # Leverage (1-125, recommended: 1-3 for beginners)

# ========== Risk Management ==========
MAX_DAILY_LOSS_MULTIPLIER=5  # Stop trading if daily loss > POSITION_SIZE * this value
MAX_DAILY_TRADES=20          # Maximum trades per day

# ========== Symbol Selection ==========
# Option 1: Monitor specific symbols
SYMBOLS=BTCUSDT,ETHUSDT,BNBUSDT

# Option 2: Monitor all coins (set FETCH_ALL_COINS=1)
FETCH_ALL_COINS=0
MIN_VOLUME_24H=1000000  # Minimum 24h volume in USDT
MAX_PAIRS=50            # Limit number of pairs to monitor

# ========== Timeframes ==========
TIMEFRAMES=15m,30m,1h

# ========== Pivot Settings ==========
PIVOT_LEFT=1
PIVOT_RIGHT=1
KEEP_PIVOTS=500

# ========== Pattern Filters ==========
USE_VARIANT_FILTER=1
ALLOW_PH1=1
ALLOW_PH2=1
ALLOW_PH3=1
ALLOW_PH4=1
ALLOW_PH5=1
ALLOW_PL1=1
ALLOW_PL2=1
ALLOW_PL3=1
ALLOW_PL4=1
ALLOW_PL5=1

# ========== Telegram Notifications ==========
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ========== Advanced Settings ==========
HISTORICAL_LIMIT=100  # Number of candles to fetch for pivot building
UPDATE_INTERVAL=60    # Seconds between market scans
