[Unit]
Description=CHoCH Live Trading Bot
After=network.target

[Service]
Type=simple
User=YOUR_USERNAME
WorkingDirectory=/path/to/choch-alert-backend
Environment="PATH=/path/to/choch-alert-backend/venv/bin"
ExecStart=/path/to/choch-alert-backend/venv/bin/python trading_bot.py
Restart=always
RestartSec=10

# Logging
StandardOutput=append:/var/log/choch-trading-bot.log
StandardError=append:/var/log/choch-trading-bot-error.log

[Install]
WantedBy=multi-user.target
